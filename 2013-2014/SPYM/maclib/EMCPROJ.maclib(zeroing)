         MACRO
         ZEROING &TO,&LENGTH
*R1 R2 R3 R4 R9 MAY CHANGE
         GBLA  &E4
&E3      SETA  &E4+1
         LCLA  &N
         LCLC  &FROM
         XR    R4,R4
&FROM    SETC  'R4'
         LCLC  &FROM_
         LCLC  &TO_
         LCLC  &LENGTH_
*======================================================================
.TESTTO  ANOP
         AIF   ('&TO'(1,1) EQ '(').TOREG      &TO IS REGISTER
         AIF   ('&TO'(1,1) EQ '=').TOLIT      &TO IS LITERAL

.TOFLD   ANOP
         LA    R9,&TO                         &TO IS FIELD
&TO_     SETC  'R9'
         AGO   .TESTLEN

.TOLIT   ANOP
         L     R9,&TO                         &TO IS LITERAL
&TO_     SETC  'R9'
         AGO   .TESTLEN

.TOREG   ANOP
&N       SETA  K'&TO-2                        &TO IS REGISTER
&TO_     SETC  '&TO'(2,&N)
         AGO   .TESTLEN
*======================================================================
.TESTLEN ANOP
&N       SETA  K'&LENGTH
         AIF   ('&LENGTH'(1,1) EQ '(').LENREG &LENGTH IS REGISTER
         AIF   ('&LENGTH'(1,1) EQ '=').LENLIT &LENGTH IS LITERAL
         AIF   ('&LENGTH'(&N,1) EQ '#').LENEQU &LENGTH IS EQU
         AIF   ('&LENGTH'(1,1) EQ 'X').LENEQU &LENGTH IS SYMBOL

.LENFLD  ANOP
         L     R3,&LENGTH                     &LENGTH IS FIELD
&LENGTH_ SETC  'R3'
         AGO   .TESTEND

.LENLIT  ANOP
         L     R3,&LENGTH                     &LENGTH IS LITERAL
&LENGTH_ SETC  'R3'
         AGO   .TESTEND

.LENEQU  ANOP
         XR    R3,R3
&LENGTH_ SETC  '&LENGTH'(2,*)
         LHI   R3,&LENGTH_                     &LENGTH IS EQU
&LENGTH_ SETC  'R3'
         AGO   .TESTEND


.LENREG  ANOP
&N       SETA  K'&LENGTH-2                    &LENGTH IS REGISTER
&LENGTH_ SETC  '&LENGTH'(2,&N)
         LR    R3,&LENGTH_
         AGO   .TESTEND
*======================================================================
.TESTEND ANOP
         XR    R2,R2
         XR    R1,R1
         LHI   R1,X'FF'
         DR    R2,R1                 LENGTH - PAIR OF REGISTERS (E-O)

         C     R3,=X'00000000'
         BE    SKIP#&E4

LP#&E4   EQU   *
         STC   &FROM,0(&TO_)
         MVC   1(254,&TO_),0(&TO_)
         AHI   &TO_,X'FF'
         BCT   R3,LP#&E4
         B     SKIP#&E4
SND#&E4  MVC   1(0,&TO_),0(&FROM)
SKIP#&E4 EQU   *
         BCTR  R2,0
         BCTR  R2,0
         STC   &FROM,0(&TO_)
         EX    R2,SND#&E4
         MEND
